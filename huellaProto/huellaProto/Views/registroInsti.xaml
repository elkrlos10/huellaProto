<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="huellaProto.Views.registroInsti"
             Title="Registro"
             BindingContext="{Binding Main,Source={StaticResource Locator}}"
             >

    <ContentPage.Content>
        <ScrollView BindingContext="{Binding Registro}">
        <StackLayout Padding="10">
            <Image 
                    Source="huella_icon"
                    WidthRequest="100">
            </Image>

            <StackLayout
                    Orientation="Horizontal"
                    HorizontalOptions="CenterAndExpand"
                    WidthRequest="300">
                <Switch ClassId="insti"
                        HorizontalOptions="End" IsToggled="{Binding IsRemembered, Mode=TwoWay}">
                </Switch>
                <Label
                        Text="Institución educativa"
                        VerticalOptions="Center"
                        HorizontalOptions="StartAndExpand">
                </Label>
                
            </StackLayout>
            <StackLayout
                    Orientation="Horizontal"
                    HorizontalOptions="CenterAndExpand"
                    WidthRequest="300">
                <Switch ClassId="trans"
                        HorizontalOptions="End" >
                </Switch>
                <Label
                        Text="Empresa de transporte"
                        VerticalOptions="Center"
                        HorizontalOptions="StartAndExpand">
                </Label>
                
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" >
                

                <Entry WidthRequest="200"
                    Placeholder="Nombre"
                    
                    Text="{Binding Nombre, Mode=TwoWay}">
                </Entry>
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" >
                

                <Entry WidthRequest="200"
                    Placeholder="E-mail"
                   
                    Text="{Binding Email, Mode=TwoWay}">
                </Entry>
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" >
               

                <Entry WidthRequest="200"
                    Placeholder="Password"
                    IsPassword="True"
                    Text="{Binding Password, Mode=TwoWay}">
                </Entry>
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" >
                

                <Entry WidthRequest="200"
                    Placeholder="NIT"
                   
                    Text="{Binding Nit, Mode=TwoWay}">
                </Entry>
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" >
                

                <Entry WidthRequest="200"
                    Placeholder="Dirección"
                    
                    Text="{Binding Direc, Mode=TwoWay}">
                </Entry>
            </StackLayout>
            <StackLayout
                    Orientation="Horizontal"
                    VerticalOptions="CenterAndExpand"
                    >
                    <Button
                            
                            Text="Registrar" 
                            BackgroundColor="#61edb9"
                            TextColor="White" 
                            BorderRadius="23"
                            HeightRequest="36"
                            WidthRequest="100"                
                            HorizontalOptions="CenterAndExpand" 
                            Command="{Binding RegisCommand}" 
                            IsEnabled="{Binding Isnabled, Mode=TwoWay}">
                    </Button>

                </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Image Source="logos_sena" WidthRequest="130" ></Image>

            </StackLayout>
            <StackLayout>
                <Image Margin="-11" Source="foot_icon" >

                </Image>
            </StackLayout>

        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>