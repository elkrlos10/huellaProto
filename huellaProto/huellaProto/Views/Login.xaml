<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="huellaProto.Views.Login"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Login"
    BindingContext="{Binding Main, Source={StaticResource Locator}}"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>

        <ScrollView BindingContext="{Binding Login}">
            <StackLayout Padding="0,15,0,0">
                <StackLayout VerticalOptions="CenterAndExpand">
                    <Image Source="huella_icon.png">
                        <Image.WidthRequest>
                            <OnIdiom
                                x:TypeArguments="x:Double"
                                Phone="180.0"
                                Tablet="210.0" />
                        </Image.WidthRequest>
                    </Image>
                    <StackLayout HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
                        <Entry
                            Keyboard="Email"
                            Placeholder="E-mail"
                            Text="{Binding Email, Mode=TwoWay}"
                            WidthRequest="200" />
                        <Image Source="iconoUsuario" WidthRequest="20" />
                    </StackLayout>
                    <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                        <Entry
                            IsPassword="True"
                            Placeholder="Password"
                            Text="{Binding Password, Mode=TwoWay}"
                            WidthRequest="200" />
                        <Image Source="iconoPassword" WidthRequest="20" />
                    </StackLayout>
                    <StackLayout
                        Margin="0,20,0,0"
                        HorizontalOptions="CenterAndExpand"
                        Orientation="Vertical">
                        <Label
                            FontSize="18"
                            Text="¿No tiene una cuenta?"
                            TextColor="#6E6E6E" />
                        <Label
                            FontSize="15"
                            HorizontalOptions="Center"
                            Text="REGISTRESE AQUÍ"
                            TextColor="#05cec8"
                            VerticalOptions="CenterAndExpand">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding RegisCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>
                    <StackLayout
                        Padding="0,15,0,0"
                        Orientation="Horizontal"
                        VerticalOptions="StartAndExpand">
                        <Button
                            BackgroundColor="#61edb9"
                            BorderRadius="23"
                            Command="{Binding LoginCommand}"
                            HeightRequest="46"
                            HorizontalOptions="CenterAndExpand"
                            IsEnabled="{Binding Isnabled, Mode=TwoWay}"
                            Text="Login"
                            TextColor="White"
                            WidthRequest="200" />
                    </StackLayout>
                    <StackLayout HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
                        <Label
                            FontSize="16"
                            HorizontalOptions="Center"
                            Text="Olvidé mi contraseña"
                            TextColor="#6E6E6E"
                            VerticalOptions="CenterAndExpand">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ForgotPasswordCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>
                </StackLayout>
                <StackLayout
                    Margin="0,10,0,10"
                    HorizontalOptions="CenterAndExpand"
                    Orientation="Horizontal">
                    <Image Source="logos_sena" WidthRequest="200" />
                </StackLayout>
                <StackLayout Margin="0,-10,0,0">
                    <Image Source="foot_icon" />
                </StackLayout>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>