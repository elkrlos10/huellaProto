<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="huellaProto.Views.FormRegistrar"
             Title="Registro"
             BindingContext="{Binding Main,Source={StaticResource Locator}}">
    <ContentPage.Content>
        <StackLayout BindingContext="{Binding FormRegistrar}">
            <Image 
                        Source="huella_icon"
                        WidthRequest="150">
            </Image>
            <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand">
                <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Padding="0,40,0,0">
                    <Image
                            Source="institucion_icon"
                            WidthRequest="30"
                            IsVisible="{Binding IsVisibleIns, Mode=TwoWay}">
                    </Image>
                    <Entry WidthRequest="200"
                            Placeholder="Institución"
                           Text="{Binding Nombre, Mode=TwoWay}"
                           IsVisible="{Binding IsVisibleIns, Mode=TwoWay}">
                    </Entry>
                    <Image
                            Source="truck"
                            WidthRequest="30"
                            IsVisible="{Binding IsVisibleEmp, Mode=TwoWay}">
                    </Image>
                    <Entry WidthRequest="200"
                            Placeholder="Empresa"
                           Text="{Binding Nombre, Mode=TwoWay}"
                           IsVisible="{Binding IsVisibleEmp, Mode=TwoWay}">
                    </Entry>
                </StackLayout>
                <!--<StackLayout Orientation="Horizontal" HorizontalOptions="Center" Padding="0,40,0,0"  IsVisible="{Binding IsVisibleEmp, Mode=TwoWay}">
                    <Image
                            Source="truck"
                            WidthRequest="30">
                    </Image>
                    <Entry WidthRequest="200"
                            Placeholder="Empresa"
                            Text="{Binding Nombre, Mode=TwoWay}">
                    </Entry>
                </StackLayout>-->
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" >
                    <Image
                            Source="letter"
                            WidthRequest="30">
                    </Image>
                    <Entry WidthRequest="200"
                            Placeholder="E-mail"
                            Keyboard="Email"
                            Text="{Binding Email, Mode=TwoWay}">
                    </Entry>
                </StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" >
                    <Image
                                Source="pass_icon"
                                WidthRequest="20">
                    </Image>

                    <Entry WidthRequest="200"
                                Placeholder="Password"
                                IsPassword="True"
                                Text="{Binding Password, Mode=TwoWay}">
                    </Entry>
                </StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center"  >
                    <Image
                                Margin="-15,0,-10,0"
                                Source="nit"
                                WidthRequest="50">
                    </Image>
                    <Entry WidthRequest="200"
                                Placeholder="NIT"
                                Text="{Binding Nit, Mode=TwoWay}">
                    </Entry>
                </StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,0,0,10" >
                    <Image
                                Margin="-5,0,-5,0"
                                Source="sign"
                                WidthRequest="30">
                    </Image>
                    <Entry WidthRequest="200"
                                Placeholder="Dirección"
                                Text="{Binding Direc, Mode=TwoWay}">
                    </Entry>
                </StackLayout>
                <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand">
                    <Button
                                Text="Registrar" 
                                BackgroundColor="#61edb9"
                                TextColor="White" 
                                BorderRadius="23"
                                HeightRequest="46"
                                WidthRequest="200"                
                                HorizontalOptions="CenterAndExpand" 
                                Command="{Binding RegisCommand}" 
                                IsEnabled="{Binding Isnabled, Mode=TwoWay}">
                    </Button>

                </StackLayout>
            </StackLayout>
            <StackLayout VerticalOptions="EndAndExpand">
                <Image Margin="-11" Source="fondos_arboles2_icon.png" ></Image>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>